@model IEnumerable<ProjektTaiib.Models.Stolik>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
  //  <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ileMiejsc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.czyZajety)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.czyObsluzony)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ileMiejsc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.czyZajety)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.czyObsluzony)
            </td>
            <td>
                <button onclick="@ZmianaBoola(@item.czyZajety)">Oznacz</button>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    <script>

        @{
            object ZmianaBoola(bool a)
            {
                a =! a;
                return null;
            }
        }

    </script>
   
</body>
</html>
